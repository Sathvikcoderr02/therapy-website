# Environment variables declared in this file are automatically made available to your Next.js app.
# Add the environment variables as "KEY=VALUE" on separate lines.
# Example:
# DB_HOST=localhost
# DB_USER=myuser
# DB_PASS=mypassword

# NextAuth
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# Database (example with Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/yourdb?schema=public"

# Email Provider (example with Resend)
RESEND_API_KEY=re_123456789
EMAIL_FROM=noreply@yourdomain.com

# Google OAuth (example)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Other environment variables
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development
